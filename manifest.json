{
  "manifest_version": 2,
  "name": "Beta Booking",
  "version": "1.0",
  "description": "This extension lets you autofill the form when booking you bouldering timeslot at the Beta bouldering gym in Hanover.",
  "homepage_url": "https://github.com/S-Tim/beta-booking",
  "icons": {
    "48": "icons/beasts-48.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/beasts-32.png",
    "default_title": "Beta Booking",
    "default_popup": "popup/beta_booking.html"
  },
  "web_accessible_resources": [
    "beasts/frog.jpg",
    "beasts/turtle.jpg",
    "beasts/snake.jpg"
  ],
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "beta-booking@example.com",
      "strict_min_version": "57.0a1"
    }
  }
}
